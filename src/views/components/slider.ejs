<section class="slider glide"> <!-- SLIDER -->
    <h2 class="slider__title">Últimos lanzamientos</h2>
    <div class="glide__track" data-glide-el="track">
        <ul class="slider__items glide__slides">

            <!-- Iteramos sobre items para mostrar elementos en el slider -->
            <% items.forEach( item=> { %>

            <li class="slider__item glide__slide">
                <article class="card-item">
                    <a class="card-item__link" href="/shop/item/<%= item.product_id%>">
                        <picture class="card-item__cover">

                            <% if(item.product_id> 13){%>
                            <span class="card-item__tag">NUEVO</span>
                            <% }%>
                            <img class="card-item__img--front" src="<%= item.img_front%>">
                            <img class="card-item__img--back" src="<%= item.img_back%>">
                        </picture>

                        <div class="card-item__content">
                            <p class="card-item__licence">
                                <%= item.licence_name%>
                            </p>
                            <h4 class="card-item__name">
                                <%= item.product_name%>
                            </h4>
                            <p class="card-item__price">$ <%= item.product_price%>
                            </p>
                            <p class="card-item__promo">
                                <%= item.dues%> CUOTAS SIN INTERÉS
                            </p>
                        </div>
                    </a>
                </article>
            </li>

            <% }); %>          


        </ul>
    </div>
    <div class="glide__arrows" data-glide-el="controls">
        <button class="glide__arrow glide__arrow--left" data-glide-dir="<">
            <iconify-icon icon="tabler:chevron-left"></iconify-icon>
        </button>
        <button class="glide__arrow glide__arrow--right" data-glide-dir=">">
            <iconify-icon icon="tabler:chevron-right"></iconify-icon>
        </button>
    </div>
</section>