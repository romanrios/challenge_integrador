<%- include('../partials/header')%>

    <main class="container register__main">
        <div class="register">

            <h2>CREA TU CUENTA</h2>
            <h3>Completa el formulario para ser parte del mundo de los Funkos</h3>

            <form action="">

                <div class="register__datos">
                    <label for="nombre">Nombre:</label>
                    <input type="text" name="nombre" id="nombre" placeholder="Román">
                </div>

                <div class="register__datos">
                    <label for="apellido">Apellido:</label>
                    <input type="text" name="apellido" id="apellido" placeholder="Ríos">
                </div>

                <div class="register__datos">
                    <label for="email">Email:</label>
                    <input type="email" name="email" id="email" placeholder="roman@gmail.com" autocomplete="email">
                </div>

                <div class="register__datos">
                    <label for="password">Contraseña:</label>
                    <input type="password" name="password" id="password" placeholder="roman123">
                </div>

                <div class="register__datos">
                    <label for="password2">Repita Contraseña:</label>
                    <input type="password" name="password2" id="password2" placeholder="roman123">
                </div>

                <div class="register__centrar">
                    <div>
                        <a class="boton register__button">Registrar</a>
                        <input class="register__checkbox" type="checkbox" id="acceptTerms" name="acceptTerms">
                        <span class="register__acceptTermsText">Acepto <a href="#">Términos y Condiciones</a></span>
                    </div>
                </div>

            </form>

        </div>
    </main>

    <%- include('../partials/footer')%>